    // D√©s√©rialiser les donn√©es
    var metadata SensorMetadata
    err = json.Unmarshal(metadataBytes, &metadata)
    if err != nil {
        return nil, fmt.Errorf("erreur lors de la d√©s√©rialisation des m√©tadonn√©es: %v", err)
    }

    return &metadata, nil
}

// Fonction pour v√©rifier si un capteur existe
func (s *AgriTechContract) SensorExists(ctx contractapi.TransactionContextInterface, sensorID string) (bool, error) {
    metadataBytes, err := ctx.GetStub().GetState(sensorID)
    if err != nil {
        return false, fmt.Errorf("erreur lors de la lecture de l'√©tat: %v", err)
    }
    return metadataBytes != nil, nil
