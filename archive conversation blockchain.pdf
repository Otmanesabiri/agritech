import paho.mqtt.client as mqtt
import json
import time
import os
from datetime import datetime

# Configuration MQTT
MQTT_BROKER = "localhost"
MQTT_PORT = 1883
MQTT_USER = "admin"
MQTT_PASSWORD = "votre_mot_de_passe"
MQTT_TOPIC = "agritech/sensors/+/data"

# Stockage temporaire pour les donn√©es
DATA_DIRECTORY = "./data"
os.makedirs(DATA_DIRECTORY, exist_ok=True)

# Callback pour connexion
def on_connect(client, userdata, flags, rc):
    if rc == 0:
        print("Connect√© au broker MQTT")
        client.subscribe(MQTT_TOPIC)
    else:
        print(f"√âchec connexion, code: {rc}")

# Callback pour messages re√ßus
def on_message(client, userdata, msg):
    try:
        print(f"Message re√ßu sur {msg.topic}: {msg.payload.decode()}")
        data = json.loads(msg.payload.decode())
        
        # Sauvegarder dans un fichier (simulation avant blockchain)
        sensor_id = data.get("sensor_id", "unknown")
        timestamp = datetime.now().strftime("%Y%m%d%H%M%S")
        filename = f"{DATA_DIRECTORY}/{sensor_id}_{timestamp}.json"
        
        with open(filename, 'w') as f:
            json.dump(data, f)
            
        print(f"Donn√©es sauvegard√©es dans {filename}")
        
        # √Ä ce stade, vous pourriez appeler une fonction pour envoyer les donn√©es √† la blockchain
        # send_to_blockchain(data)
        
    except Exception as e:
        print(f"Erreur traitement message: {e}")

client = mqtt.Client()
client.username_pw_set(MQTT_USER, MQTT_PASSWORD)
client.on_connect = on_connect
client.on_message = on_message

def main():
    try:
        client.connect(MQTT_BROKER, MQTT_PORT, 60)
        client.loop_forever()
    except KeyboardInterrupt:
        client.disconnect()
        print("Programme arr√™t√©")
    except Exception as e:
        print(f"Erreur principale: {e}")

if __name__ == "__main__":
