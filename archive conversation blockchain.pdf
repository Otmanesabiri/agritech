// R√©cup√©rer les d√©tails d'un capteur
async function fetchSensorDetails(sensorId) {
    try {
        const response = await fetch(`${API_URL}/sensor-metadata/${sensorId}`);
        if (response.ok) {
            return await response.json();
        }
        throw new Error('Capteur non trouv√©');
    } catch (error) {
        console.error(`Erreur lors de la r√©cup√©ration du capteur ${sensorId}:`, error);
        return {
            sensor_id: sensorId,
            name: 'Capteur inconnu',
            type: 'unknown',
            location: 'Emplacement inconnu'
        };
    }
}

// Simuler une lecture de capteur
async function simulateSensorReading(sensorId, type) {
    // G√©n√©rer une valeur al√©atoire selon le type de capteur
    let value, unit;
    
    switch (type) {
        case 'temperature':
            value = (15 + Math.random() * 15).toFixed(1); // 15-30¬∞C
            unit = '¬∞C';
            break;
        case 'moisture':
            value = (30 + Math.random() * 40).toFixed(1); // 30-70%
            unit = '%';
            break;
        case 'light':
            value = Math.floor(100 + Math.random() * 900); // 100-1000 lux
            unit = 'lux';
            break;
        case 'ph':
            value = (5.5 + Math.random() * 3.0).toFixed(1); // pH 5.5-8.5
            unit = 'pH';
            break;
        default:
            value = Math.floor(Math.random() * 100);
            unit = 'unit√©';
    }
    
    // Envoyer la lecture √† l'API
    try {
        const response = await fetch(`${API_URL}/readings`, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
                'Authorization': `Bearer ${token}`
            },
            body: JSON.stringify({
                sensor_id: sensorId,
                value: parseFloat(value),
                unit: unit,
                timestamp: new Date().toISOString()
            })
        });
        
        const data = await response.json();
        
        if (data.success) {
            console.log('Lecture simul√©e envoy√©e:', data);
        } else {
            alert('Erreur lors de la simulation de lecture: ' + (data.error || '√âchec de l\'envoi'));
        }
    } catch (error) {
        console.error('Erreur de simulation:', error);
        alert('Erreur de communication avec le serveur');
    }
}

