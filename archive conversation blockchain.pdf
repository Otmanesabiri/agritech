        // V√©rifier si l'identit√© Admin existe d√©j√†
        const identity = await wallet.get('admin');
        if (!identity) {
            logger.error('L\'identit√© admin n\'existe pas dans le wallet');
            return false;
        }

        // Cr√©er une nouvelle passerelle
        const gateway = new Gateway();
        await gateway.connect(ccp, {
            wallet,
            identity: 'admin',
            discovery: { enabled: true, asLocalhost: true }
        });

        // Obtenir le r√©seau (channel)
        const network = await gateway.getNetwork('agritechchannel');

        // Obtenir le contract
        contract = network.getContract('agritech');
        logger.info('Connect√© au r√©seau Fabric avec succ√®s');
        return true;
    } catch (error) {
        logger.error(`Erreur lors de la connexion au r√©seau Fabric: ${error}`);
        return false;
    }
}

// Connexion au broker MQTT
function connectToMQTT() {
    try {
        const mqttBroker = process.env.MQTT_BROKER || 'mqtt://192.168.1.24';
        mqttClient = mqtt.connect(mqttBroker);

        mqttClient.on('connect', () => {
            logger.info(`Connect√© au broker MQTT: ${mqttBroker}`);
            mqttClient.subscribe('agritech/#', (err) => {
                if (!err) {
                    logger.info('Abonn√© aux topics agritech/#');
                } else {
                    logger.error(`Erreur lors de l'abonnement MQTT: ${err}`);
                }
            });
        });

        mqttClient.on('message', async (topic, message) => {
            logger.debug(`Message MQTT re√ßu sur ${topic}: ${message.toString()}`);
            try {
                // Traiter les messages de capteurs
                if (topic.startsWith('agritech/sensors/')) {
                    const data = JSON.parse(message.toString());
                    await recordSensorData(data);
                }
            } catch (error) {
                logger.error(`Erreur lors du traitement du message MQTT: ${error}`);
            }
        });

        mqttClient.on('error', (error) => {
            logger.error(`Erreur MQTT: ${error}`);
        });

        return true;
    } catch (error) {
        logger.error(`Erreur lors de la connexion au broker MQTT: ${error}`);
        return false;
    }
}

// Enregistrer les donn√©es d'un capteur sur la blockchain
async function recordSensorData(data) {
    try {
        if (!contract) {
            logger.error('Contract non initialis√©');
            return false;
        }

        // Formater les donn√©es pour la blockchain
        const sensorData = {
            sensor_id: data.sensor_id,
            type: data.type || 'unknown',
            location: data.location || 'unknown',
            value: data.value,
            unit: data.unit || '',
            status: data.status || 'normal',
            timestamp: data.timestamp,
            device_id: data.device_id || 'unknown',
            hash: data.hash || ''
        };

        // Envoyer √† la blockchain
        await contract.submitTransaction('RecordSensorData', JSON.stringify(sensorData));
        logger.info(`Donn√©es du capteur ${sensorData.sensor_id} enregistr√©es sur la blockchain`);
        return true;
    } catch (error) {
        logger.error(`Erreur lors de l'enregistrement des donn√©es sur la blockchain: ${error}`);
        return false;
    }
}

// Middleware d'authentification
function authenticateToken(req, res, next) {
    const authHeader = req.headers['authorization'];
    const token = authHeader && authHeader.split(' ')[1];
    
    if (token == null) return res.sendStatus(401);
    
    jwt.verify(token, process.env.TOKEN_SECRET || 'your-secret-key', (err, user) => {
        if (err) return res.sendStatus(403);
        req.user = user;
        next();
    });
}

