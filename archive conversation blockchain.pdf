class SecurityManager:
    """Gestionnaire de s√©curit√© pour l'authentification et la signature des donn√©es"""
    
    def __init__(self, keys_dir: str):
        """
        Initialise le gestionnaire de s√©curit√©
        
        Args:
            keys_dir: R√©pertoire pour stocker les cl√©s
        """
        self.keys_dir = keys_dir
        self.private_key_path = os.path.join(keys_dir, 'private_key.pem')
        self.public_key_path = os.path.join(keys_dir, 'public_key.pem')
        self.private_key = None
