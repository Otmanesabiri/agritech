                }
                
                logger.debug(f"D√©tection par Z-score pour {sensor_id}: {value} -> {'Anomalie' if is_anomaly else 'Normal'} (score: {z_score:.3f}, seuil: {self.threshold})")
                return result
            
            except Exception as e:
                logger.error(f"Erreur lors de la d√©tection par Z-score pour {sensor_id}: {e}")
        
        # M√©thode 3: V√©rification simple des limites si aucune autre m√©thode n'est disponible
        try:
            # R√©cup√©rer les m√©tadonn√©es du capteur (si disponibles)
            metadata = None
            if historical_data and len(historical_data) > 0:
