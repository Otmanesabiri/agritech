"""
Module de d√©tection d'anomalies dans les donn√©es des capteurs
"""
import os
import sys
import json
import logging
import numpy as np
from typing import Dict, List, Any, Tuple, Optional
from datetime import datetime, timedelta
import pickle
from sklearn.ensemble import IsolationForest

# Configuration du logging
logger = logging.getLogger("anomaly_detector")

class AnomalyDetector:
    """D√©tecteur d'anomalies pour les donn√©es des capteurs"""
    
    def __init__(self, models_dir: str):
        """
        Initialise le d√©tecteur d'anomalies
        
        Args:
            models_dir: R√©pertoire pour stocker les mod√®les entra√Æn√©s
        """
        self.models_dir = models_dir
        self.models = {}
        self.threshold = 2.5  # Facteur pour le Z-score
        self.window_size = 20  # Nombre de points pour la d√©tection
        
        # Cr√©er le r√©pertoire des mod√®les s'il n'existe pas
        if not os.path.exists(self.models_dir):
            os.makedirs(self.models_dir)
        
        # Charger les mod√®les existants
        self._load_models()
    
    def _load_models(self) -> None:
        """Charge les mod√®les existants depuis le disque"""
        try:
            for filename in os.listdir(self.models_dir):
                if filename.endswith('.pkl'):
                    sensor_id = filename.split('_')[0]
                    model_path = os.path.join(self.models_dir, filename)
                    
                    with open(model_path, 'rb') as f:
                        self.models[sensor_id] = pickle.load(f)
                    
                    logger.info(f"Mod√®le charg√© pour le capteur {sensor_id}")
        
        except Exception as e:
            logger.error(f"Erreur lors du chargement des mod√®les: {e}")
    
    def _save_model(self, sensor_id: str, model) -> None:
        """
        Sauvegarde un mod√®le sur le disque
        
        Args:
            sensor_id: ID du capteur
            model: Mod√®le √† sauvegarder
        """
        try:
            model_path = os.path.join(self.models_dir, f"{sensor_id}_model.pkl")
            
            with open(model_path, 'wb') as f:
                pickle.dump(model, f)
            
            logger.info(f"Mod√®le sauvegard√© pour le capteur {sensor_id}")
        
        except Exception as e:
            logger.error(f"Erreur lors de la sauvegarde du mod√®le: {e}")
    
    def train_model(self, sensor_id: str, historical_data: List[Dict[str, Any]]) -> bool:
        """
        Entra√Æne un mod√®le pour un capteur sp√©cifique
        
        Args:
            sensor_id: ID du capteur
            historical_data: Donn√©es historiques du capteur
            
        Returns:
            bool: True si l'entra√Ænement a r√©ussi, False sinon
        """
        if len(historical_data) < 50:
            logger.warning(f"Pas assez de donn√©es pour entra√Æner un mod√®le pour {sensor_id} ({len(historical_data)} points)")
            return False
        
        try:
            # Extraire les valeurs
            values = np.array([item['value'] for item in historical_data]).reshape(-1, 1)
            
            # Entra√Æner un mod√®le Isolation Forest
            model = IsolationForest(n_estimators=100, contamination=0.05, random_state=42)
            model.fit(values)
            
            # Sauvegarder le mod√®le
            self.models[sensor_id] = model
            self._save_model(sensor_id, model)
            
            logger.info(f"Mod√®le entra√Æn√© pour le capteur {sensor_id} avec {len(historical_data)} points de donn√©es")
            return True
        
        except Exception as e:
            logger.error(f"Erreur lors de l'entra√Ænement du mod√®le pour {sensor_id}: {e}")
            return False
    
    def detect_anomaly(self, sensor_id: str, value: float, historical_data: Optional[List[Dict[str, Any]]] = None) -> Dict[str, Any]:
        """
        D√©tecte si une valeur est anormale
        
        Args:
