            os.makedirs(self.keys_dir)
        
        # G√©n√©rer ou charger les cl√©s
        self._load_or_generate_keys()
    
    def _generate_device_id(self) -> str:
        """
        G√©n√®re un identifiant unique pour le dispositif
        
        Returns:
            str: Identifiant du dispositif
        """
        try:
            # Utiliser l'adresse MAC ou une autre caract√©ristique unique
            mac_address = self._get_mac_address()
            hostname = os.uname().nodename
            
            # Combiner les informations pour cr√©er un ID unique
            device_id = hashlib.sha256(f"{mac_address}-{hostname}".encode()).hexdigest()[:16]
            return f"agritech-{device_id}"
        
        except Exception as e:
            logger.error(f"Erreur lors de la g√©n√©ration de l'ID du dispositif: {e}")
            # Fallback: utiliser un ID g√©n√©r√© al√©atoirement
            return f"agritech-{os.urandom(8).hex()}"
    
    def _get_mac_address(self) -> str:
        """
        R√©cup√®re l'adresse MAC de l'interface r√©seau principale
        
        Returns:
            str: Adresse MAC ou cha√Æne al√©atoire en cas d'erreur
        """
        try:
            # Essayer de r√©cup√©rer l'adresse MAC d'une interface r√©seau
            for interface in os.listdir('/sys/class/net/'):
                if interface == 'lo':  # Ignorer l'interface loopback
                    continue
                    
                mac_path = f"/sys/class/net/{interface}/address"
                if os.path.exists(mac_path):
                    with open(mac_path, 'r') as f:
                        return f.read().strip()
            
            # Si aucune adresse MAC n'est trouv√©e
            return os.urandom(6).hex(':')
        
        except Exception as e:
            logger.error(f"Erreur lors de la r√©cup√©ration de l'adresse MAC: {e}")
            return os.urandom(6).hex(':')
    
    def _load_or_generate_keys(self) -> None:
        """Charge les cl√©s existantes ou g√©n√®re de nouvelles cl√©s"""
        try:
            # V√©rifier si les cl√©s existent
            if os.path.exists(self.private_key_path) and os.path.exists(self.public_key_path):
                # Charger les cl√©s existantes
                with open(self.private_key_path, 'rb') as f:
                    self.private_key = RSA.import_key(f.read())
                
                with open(self.public_key_path, 'rb') as f:
                    self.public_key = RSA.import_key(f.read())
                
                logger.info("Cl√©s de signature charg√©es")
            else:
                # G√©n√©rer de nouvelles cl√©s
                logger.info("G√©n√©ration de nouvelles cl√©s de signature...")
                key = RSA.generate(2048)
                self.private_key = key
                self.public_key = key.publickey()
                
                # Sauvegarder les cl√©s
                with open(self.private_key_path, 'wb') as f:
                    f.write(self.private_key.export_key('PEM'))
                
                with open(self.public_key_path, 'wb') as f:
                    f.write(self.public_key.export_key('PEM'))
                
                # D√©finir les permissions correctes
                os.chmod(self.private_key_path, 0o600)  # Lecture/√©criture pour le propri√©taire uniquement
                os.chmod(self.public_key_path, 0o644)   # Lecture pour tous, √©criture pour le propri√©taire
                
                logger.info("Nouvelles cl√©s de signature g√©n√©r√©es et sauvegard√©es")
        
        except Exception as e:
            logger.error(f"Erreur lors du chargement/g√©n√©ration des cl√©s: {e}")
            raise
    
    def sign_data(self, data: Dict[str, Any]) -> Dict[str, Any]:
        """
        Signe des donn√©es avec la cl√© priv√©e
        
        Args:
            data: Donn√©es √† signer
            
        Returns:
            Dict: Donn√©es avec signature
        """
        try:
            # Copier les donn√©es pour ne pas modifier l'original
            signed_data = data.copy()
            
            # Ajouter des m√©tadonn√©es de signature
            signed_data['device_id'] = self.device_id
            signed_data['timestamp_signed'] = datetime.now().isoformat()
            
            # Cr√©er une repr√©sentation canonique des donn√©es (tri des cl√©s)
            data_to_sign = json.dumps(signed_data, sort_keys=True).encode()
            
            # Calculer le hash des donn√©es
            data_hash = SHA256.new(data_to_sign)
            
            # Signer le hash
            signer = pkcs1_15.new(self.private_key)
            signature = signer.sign(data_hash)
            
            # Ajouter la signature aux donn√©es
            signed_data['signature'] = base64.b64encode(signature).decode('utf-8')
            signed_data['hash'] = data_hash.hexdigest()
            
            logger.debug(f"Donn√©es sign√©es pour le capteur {data.get('sensor_id', 'inconnu')}")
            return signed_data
        
        except Exception as e:
            logger.error(f"Erreur lors de la signature des donn√©es: {e}")
            # Retourner les donn√©es originales en cas d'erreur
            data['signature_error'] = str(e)
            return data
    
    def verify_signature(self, data: Dict[str, Any], public_key_pem: Optional[str] = None) -> bool:
        """
        V√©rifie la signature des donn√©es
        
        Args:
            data: Donn√©es sign√©es √† v√©rifier
            public_key_pem: Cl√© publique PEM (si diff√©rente de celle par d√©faut)
            
        Returns:
            bool: True si la signature est valide, False sinon
        """
        try:
            # V√©rifier que les champs n√©cessaires sont pr√©sents
            if 'signature' not in data or 'hash' not in data:
                logger.warning("Donn√©es non sign√©es ou signature incompl√®te")
                return False
            
            # Extraire la signature
            signature = base64.b64decode(data['signature'])
            
            # Copier les donn√©es pour retirer la signature
            data_copy = data.copy()
            data_copy.pop('signature')
            
            # Cr√©er une repr√©sentation canonique des donn√©es
            data_to_verify = json.dumps(data_copy, sort_keys=True).encode()
            
            # Calculer le hash des donn√©es
            data_hash = SHA256.new(data_to_verify)
            
            # V√©rifier que le hash correspond
            if data_hash.hexdigest() != data['hash']:
                logger.warning("Hash des donn√©es invalide")
                return False
            
            # Utiliser la cl√© publique fournie ou celle par d√©faut
            if public_key_pem:
                verification_key = RSA.import_key(public_key_pem)
            else:
                verification_key = self.public_key
            
            # V√©rifier la signature
            verifier = pkcs1_15.new(verification_key)
            try:
                verifier.verify(data_hash, signature)
                logger.debug("Signature valide")
                return True
            except Exception:
                logger.warning("Signature invalide")
                return False
        
        except Exception as e:
            logger.error(f"Erreur lors de la v√©rification de la signature: {e}")
            return False
    
    def generate_auth_token(self, expiration: int = 3600) -> str:
        """
