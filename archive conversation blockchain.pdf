/*
 * Script pour enr√¥ler l'utilisateur administrateur
 */
const { Wallets, Gateway, X509Identity } = require('fabric-network');
const FabricCAServices = require('fabric-ca-client');
const fs = require('fs');
const path = require('path');

async function main() {
    try {
        // Charger le profil de connexion
        const ccpPath = path.resolve(__dirname, '..', 'network', 'connection-profile.json');
        const ccp = JSON.parse(fs.readFileSync(ccpPath, 'utf8'));

        // Cr√©er un nouveau wallet pour g√©rer les identit√©s
        const walletPath = path.join(process.cwd(), 'wallet');
        const wallet = await Wallets.newFileSystemWallet(walletPath);
        console.log(`Wallet path: ${walletPath}`);

        // V√©rifier si l'identit√© admin existe d√©j√†
        const identity = await wallet.get('admin');
        if (identity) {
            console.log('L\'identit√© admin existe d√©j√† dans le wallet');
            return;
        }

        // Enr√¥ler l'utilisateur admin
        const caInfo = ccp.certificateAuthorities['ca.agritech.com'];
        const caTLSCACerts = caInfo.tlsCACerts.pem;
        const ca = new FabricCAServices(caInfo.url, { trustedRoots: caTLSCACerts, verify: false }, caInfo.caName);

        // Enr√¥ler l'administrateur
        const enrollment = await ca.enroll({ enrollmentID: 'admin', enrollmentSecret: 'adminpw' });
        const x509Identity = {
            credentials: {
                certificate: enrollment.certificate,
                privateKey: enrollment.key.toBytes(),
            },
            mspId: 'AgriTechMSP',
            type: 'X.509',
        };
        await wallet.put('admin', x509Identity);
        console.log('Identit√© "admin" enregistr√©e dans le wallet avec succ√®s');

    } catch (error) {
        console.error(`Erreur lors de l'enr√¥lement de l'administrateur: ${error}`);
        process.exit(1);
    }
}

main();
