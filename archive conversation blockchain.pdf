# Ajouter le r√©pertoire parent au chemin de recherche des modules
sys.path.insert(0, os.path.dirname(os.path.abspath(__file__)))

from config.config import DATA_COLLECTION_INTERVAL, HEALTH_CHECK_INTERVAL
