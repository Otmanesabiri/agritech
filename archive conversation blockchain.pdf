    def _calculate_date(self, days_since_planting, crop_data):
        """Calcule la date optimale bas√©e sur les degr√©s-jours et le mod√®le de culture"""
        # Utiliser des informations sp√©cifiques √† la culture pour estimer la date
        crop_type = crop_data.get('crop_type', '').lower()
        
        # D√©lais moyens jusqu'√† maturit√© (jours)
        maturity_days = {
            'tomato': 90,
            'potato': 110,
            'wheat': 120,
            'rice': 130,
            'corn': 100
        }
        
        base_days = maturity_days.get(crop_type, 100)
        
        # Ajuster en fonction des conditions m√©t√©o et d'autres facteurs
        adjustment = 0
        if crop_data.get('avg_temp', 0) > 25:
            adjustment -= 5  # Plus chaud = maturation plus rapide
        elif crop_data.get('avg_temp', 0) < 15:
            adjustment += 7  # Plus froid = maturation plus lente
            
        # Calculer les jours restants
        days_remaining = max(0, base_days - days_since_planting + adjustment)
        
        # Formatage de la date pr√©vue (aujourd'hui + jours restants)
        from datetime import datetime, timedelta
        predicted_date = datetime.now() + timedelta(days=days_remaining)
        
        return predicted_date.strftime("%Y-%m-%d")
    
    def train_models(self, training_data=None):
        """Entra√Æne ou met √† jour les mod√®les avec de nouvelles donn√©es"""
        if training_data is None:
            # Utiliser les donn√©es des capteurs existantes
            raw_data, features = self.load_and_preprocess_data(days=60)  # Utiliser 60 jours de donn√©es
        else:
            # Utiliser les donn√©es fournies
            features = self._extract_features(training_data)
            
        # Entra√Ænement du mod√®le de recommandation d'engrais (exemple)
        # Dans une impl. r√©elle, vous auriez besoin de donn√©es √©tiquet√©es
        # Ici, c'est juste un exemple de la structure
        print("Entra√Ænement des mod√®les avec", len(features), "exemples")
        
        # Sauvegarder les mod√®les entra√Æn√©s
        os.makedirs(self.models_dir, exist_ok=True)
        
        # Exemple: sauvegarde du scaler
        joblib.dump(self.scaler, os.path.join(self.models_dir, 'scaler.joblib'))
        
        return {"status": "success", "message": "Mod√®les entra√Æn√©s avec succ√®s"}
