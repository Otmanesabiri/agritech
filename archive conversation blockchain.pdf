// RecordSensorData enregistre les donn√©es d'un capteur sur la blockchain
func (s *SmartContract) RecordSensorData(ctx contractapi.TransactionContextInterface, sensorDataJSON string) error {
	var sensorData SensorData
	err := json.Unmarshal([]byte(sensorDataJSON), &sensorData)
	if err != nil {
		return fmt.Errorf("erreur lors de la conversion des donn√©es: %v", err)
	}

	// Valider les donn√©es minimales requises
	if sensorData.SensorID == "" || sensorData.Value == 0 || sensorData.Timestamp == "" {
		return fmt.Errorf("donn√©es de capteur incompl√®tes, champs requis: sensor_id, value, timestamp")
	}

	// Obtenir l'ID de transaction
	txID := ctx.GetStub().GetTxID()
	sensorData.TxID = txID
	
	// D√©finir le moment de cr√©ation dans la blockchain
	if sensorData.CreatedAt == "" {
