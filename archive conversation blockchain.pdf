// Fonction d'initialisation de Socket.io
function initSocket() {
    if (socket) {
        socket.disconnect();
    }
    
    socket = io(SOCKET_URL);
    
    socket.on('connect', () => {
        console.log('Connect√© au serveur Socket.io');
    });
    
    socket.on('disconnect', () => {
        console.log('D√©connect√© du serveur Socket.io');
    });
    
    // S'abonner aux mises √† jour de tous les capteurs
    loadSensors().then(sensors => {
        sensors.forEach(sensor => {
            socket.on(`sensor-reading-${sensor.sensor_id}`, (reading) => {
                console.log('Nouvelle lecture re√ßue:', reading);
                
                // Mettre √† jour l'interface si n√©cessaire
                updateRealTimeReadings(reading);
                
                // Mettre √† jour le graphique si c'est le capteur actuellement s√©lectionn√©
                if (sensorSelect && sensorSelect.value === reading.sensor_id && chart) {
                    addDataToChart(chart, new Date(reading.timestamp).toLocaleTimeString(), reading.value);
                }
            });
        });
    });
}

// Mettre √† jour les lectures en temps r√©el
