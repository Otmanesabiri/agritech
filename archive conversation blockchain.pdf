            return False, None
        
        except Exception as e:
            logger.error(f"Erreur lors de la v√©rification du token: {e}")
            return False, None
    
    def compute_data_hash(self, data: Dict[str, Any]) -> str:
        """
        Calcule un hash pour des donn√©es
        
        Args:
            data: Donn√©es √† hacher
            
        Returns:
