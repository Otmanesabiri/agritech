	}

	// √âmettre un √©v√©nement pour notifier les abonn√©s
	eventPayload := fmt.Sprintf("{\"sensor_id\":\"%s\",\"value\":%.2f,\"timestamp\":\"%s\",\"tx_id\":\"%s\"}", 
		sensorData.SensorID, sensorData.Value, sensorData.Timestamp, txID)
